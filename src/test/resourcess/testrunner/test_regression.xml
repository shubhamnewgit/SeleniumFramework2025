<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Open Cart App Test Regression Suit" verbose="4" parallel="tests"
	thread-count="3">

	<listeners>
		<listener class-name="com.qa.openCart.listeners.ExtendReportListener"></listener>
		<listener class-name="com.qa.openCart.listeners.TestAllureListener"></listener>
	</listeners>

	<test name="Login Page Test">
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.qa.openCart.tests.LoginPageTest" />
		</classes>
	</test>

	<test name="Account Page Test">
		<parameter name="browser" value="edge" />
		<classes>
			<class name="com.qa.openCart.tests.AccountPageTest" />
		</classes>
	</test>

	<test name="ProductInfo Page Test">
		<parameter name="browser" value="firefox" />
		<classes>
			<class name="com.qa.openCart.tests.ProductInfoPageTest" />
		</classes>
	</test>

	<test name="Reg Page Test">
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.qa.openCart.tests.RegistrationPageTest" />
		</classes>
	</test>


</suite>